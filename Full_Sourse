int var1() {
	setlocale(LC_ALL, "Russian");
	int n, m, i, c, s;
	m = 37;
	i = 3;
	c = 64;
	cout << "Введите количество чисел" << endl;
	cin >> n;
	s = (rand() * 13 - 65) % 2;
	for (int k = 1; k <= n; k++)
	{
		s = (m * s + i) % c;
		cout << s << endl;
	}
	return 0;
}
