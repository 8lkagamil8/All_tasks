									res = 1000 - res;
								}
							}
						}
					}
				}
			}
		}

		//------------------------------------------------------------Для десяти(Х)
		if ((s[y] == 'X') & (s[y + 1] == 'I')) {
			res = res + 1;
		}
		else {
			if ((s[y] == 'X') & (s[y + 1] == 'V')) {
				res = 5 + res;
