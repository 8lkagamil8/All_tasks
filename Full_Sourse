int ra() {
	setlocale(LC_ALL, "rus");
	float a, b;
	cout << "Сторона a - "; cin >> a; while (cin.fail()) { cout << "Уупс. ошибка. Вводите цифры" << endl; char fail; cin.clear(); cin >> fail; cin >> a; }
	cout << "Сторона b - "; cin >> b; while (cin.fail()) { cout << "Уупс. ошибка. Вводите цифры" << endl; char fail; cin.clear(); cin >> fail; cin >> b; }
	if ((a == 0) || (b == 0)) {
		cout << "Измерения не могут быть равны 0" << endl;
	}
	else {
		cout << "Площадь прямоугольника равна " << abs(a * b) << '\n';
	}
	return 0;
}
int ta() {
	setlocale(LC_ALL, "rus");
	float a, h;
	cout << "Основание - "; cin >> a; while (cin.fail()) { cout << "Уупс. ошибка. Вводите цифры" << endl; char fail; cin.clear(); cin >> fail; cin >> a; }
	cout << "Высота - "; cin >> h; while (cin.fail()) { cout << "Уупс. ошибка. Вводите цифры" << endl; char fail; cin.clear(); cin >> fail; cin >> h; }
	if ((a == 0) || (h == 0)) {
		cout << "Измерения не могут быть равны 0" << endl;
	}
	else {
		cout << "Площадь тругольника равна " << abs((a * h) / 2) << '\n';
	}
	return 0;
}
int ci() {
	setlocale(LC_ALL, "rus");
	double r;
	cout << "Радиус - "; cin >> r; while (cin.fail()) { cout << "Уупс. ошибка. Вводите цифры" << endl; char fail; cin.clear(); cin >> fail; cin >> r; }
	cout << "Площадь круга равна " << pow(r, 2) << "pi" << '\n';
	return 0;
}
